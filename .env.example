# =============================================================================
# OmniMemory Microservices Configuration
# =============================================================================
# Copy this file to .env and update with your values
# =============================================================================

# -----------------------------------------------------------------------------
# Infrastructure Services (from docker-compose)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=omnimemory
POSTGRES_USER=omnimemory
POSTGRES_PASSWORD=CHANGE_ME

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# Microservice URLs (adjust if running distributed)
# -----------------------------------------------------------------------------
EMBEDDING_SERVICE_URL=http://localhost:8000
COMPRESSION_SERVICE_URL=http://localhost:8001
PROCEDURAL_SERVICE_URL=http://localhost:8002
METRICS_SERVICE_URL=http://localhost:8003
DASHBOARD_URL=http://localhost:8004
REDIS_CACHE_SERVICE_URL=http://localhost:8005

# -----------------------------------------------------------------------------
# External AI API Keys (Optional)
# -----------------------------------------------------------------------------
# For OpenAI embeddings provider
# OPENAI_API_KEY=sk-...

# For Gemini embeddings provider
# GOOGLE_API_KEY=AIza...
# GEMINI_API_KEY=...

# For Anthropic (compression service)
# ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Service-Specific Configuration
# -----------------------------------------------------------------------------

# Embeddings Service
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000

# Compression Service
COMPRESSION_RATIO=0.15  # 85% reduction target
QUALITY_THRESHOLD=0.9

# Cache Service
CACHE_TTL=3600  # 1 hour

# Metrics Service
METRICS_PORT=8003
